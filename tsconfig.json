{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "outDir": "build",
    "baseUrl": ".",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "utils/*": ["src/utils/*"],
      "types/*": ["src/types/*"],
      "market-maker/*": ["src/market-maker/*"],
      "interface/*": ["src/interface/*"],
      "repository/*": ["src/repository/*"],
      "middleware/*": ["src/middleware/*"],
      "logger/*": ["src/logger/*"],
      "router/*": ["src/router/*"],
      "service/*": ["src/service/*"],
      "server/*": ["src/server/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "ts-node": {
    "esm": true
  }
}
